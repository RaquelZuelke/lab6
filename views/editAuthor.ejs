<%- include("partials/header.ejs") %>

<body>
    <h1> Update/Delete Authors </h1>
    <div class="container">
        <form method="POST" action="/author/edit">
            <input type="hidden" name="authorId" value="<%=authorInfo[0].authorId%>">
            First Name:
            <input type="text" name="fName" value="<%=authorInfo[0].firstName%>"><br>

            Last Name:
            <input type="text" name="lName" value="<%=authorInfo[0].lastName%>"><br>

            Date of Birth:
            <input type="date" name="dob" value="<%=authorInfo[0].dobISO%>"><br>

            Date of Death:
            <input type="date" name="dod" value="<%=authorInfo[0].dodISO%>"><br>

            Sex:
            <input type="radio" name="sex" value="M"
                <% if(authorInfo[0].sex == "M") { %>
                    checked
                <% } %>
            > Male
            <input type="radio" name="sex" value="F"
                <% if(authorInfo[0].sex == "F") { %>
                    checked
                <% } %>
            > Female
            <br>

            Profession:
            <input type="text" name="profession" value="<%=authorInfo[0].profession%>"><br>

            Country:
            <input type="text" name="country" value="<%=authorInfo[0].country%>"><br>

            Portrait URL:
            <input type="text" name="portraitURL" value="<%=authorInfo[0].portrait%>"><br>

            Biography:
            <textarea name="biography" rows="4" cols="50"><%=authorInfo[0].biography%></textarea><br>

            <button>Update Author</button>
        </form>
    </div>
    <%- include("partials/footer.ejs") %>
</body>
</html>